{
    "name": "tcl",
    "displayName": "Tcl",
    "description": "Tcl language support",
    "version": "0.3.1",
    "publisher": "bitwisecook",
    "icon": "images/Tcl-powered.png",
    "engines": {
        "vscode": "^0.10.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bitwisecook/tcl.git"
    },
    "categories": [
        "Formatters",
        "Other",
        "Programming Languages",
        "Snippets"
    ],
	"activationEvents": [
		"onLanguage:tcl"
	],
	"main": "./out/client/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "tcl",
                "aliases": [
                    "Tcl",
                    "tcl"
                ],
                "extensions": [
                    ".tcl",
                    ".test"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tcl",
                "scopeName": "source.tcl",
                "path": "./out/syntaxes/tcl.tmlanguage"
            }
        ],
        "snippets": [
            {
                "language": "tcl",
                "path": "./snippets/tcl.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./ && node out/build.js",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.48",
        "@types/node": "^10.12.21",
        "converter": "0.0.5",
        "mocha": "^6.2.0",
        "ts-node": "^8.4.1",
        "tslint": "^5.12.1",
        "typescript": "^3.3.1",
        "vscode": "^1.1.28"
    }
}
